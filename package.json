{
	"name": "guacamole",
	"displayName": "Guacamole",
	"description": "Guacamole on vscode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:guacamole.toggle"
	],
	"main": "./lib/js/src/Main.bs.js",
	"contributes": {
		"languages": [
			{
				"id": "gcl",
				"extensions": [
					".gcl"
				],
				"aliases": [
					"Guacamole"
				],
				"filenames": []
			}
		],
		"commands": [
			{
				"command": "guacamole.toggle",
				"title": "Toggle activate/deactivate"
			},
			{
				"command": "guacamole.reload",
				"title": "Reload"
			},
			{
				"command": "guacamole.refine",
				"title": "Refine"
			},
			{
				"command": "guacamole:insert-assertion",
				"title": "Insert assertion"
			},
			{
				"command": "guacamole:debug-gcl",
				"title": "Debug"
			}
		],
		"keybindings": [
			{
				"command": "guacamole.toggle",
				"key": "ctrl+c ctrl+x",
				"mac": "ctrl+c ctrl+x"
			},
			{
				"command": "guacamole.reload",
				"key": "ctrl+s",
				"mac": "cmd+s",
				"when": "resourceExtname == .gcl"
			},
			{
				"command": "guacamole.refine",
				"key": "ctrl+c ctrl+r",
				"mac": "ctrl+c ctrl+r",
				"when": "resourceExtname == .gcl"
			},
			{
				"command": "guacamole.insert-assertion",
				"key": "ctrl+c ctrl+a",
				"mac": "ctrl+c ctrl+a",
				"when": "resourceExtname == .gcl"
			},
			{
				"command": "guacamole.debug-gcl",
				"key": "ctrl+c ctrl+[",
				"mac": "ctrl+c ctrl+[",
				"when": "resourceExtname == .gcl"
			}
		],
		"configuration": {
			"title": "Guacamole",
			"properties": {
				"guacamole.gclPath": {
					"type": "string",
					"default": "",
					"scope": "machine-overridable",
					"description": "Path to the GCL program."
				}
			}
		}
	},
	"scripts": {
		"build-css": "npx less-watch-compiler --run-once style/ dist/",
		"build": "bsb -make-world && npm run build-css && npx webpack --mode=production",
		"watch-css": "npx less-watch-compiler style/ dist/",
		"watch-code": "npx webpack --mode=production --watch",
		"dev": "bsb -make-world && npm run watch-css & npm run watch-code",
		"clean": "bsb -clean-world"
	},
	"devDependencies": {
		"less-loader": "^5.0.0",
		"less-watch-compiler": "^1.14.6",
		"vscode-test": "^1.2.2",
		"webpack": "^4.42.0",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {
		"@glennsl/bs-json": "^5.0.1",
		"agda-mode-vscode": "github:banacorn/agda-mode-vscode#v0.1.2",
		"bs-platform": "^7.2",
		"bs-webapi": "^0.15.3",
		"reason-promise": "^1.0.1",
		"reason-react": ">=0.7.0",
		"reason-react-update": "^0.1.1"
	},
	"peerDependencies": {
		"react": "16.9.0",
		"react-dom": "16.9.0"
	},
	"resolutions": {
		"**/react": "16.9.0",
		"**/react-dom": "16.9.0"
	}
}